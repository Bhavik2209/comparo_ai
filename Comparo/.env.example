# ========== REQUIRED API KEYS ==========
GROQ_API_KEY=your_groq_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ========== FASTAPI SETTINGS ==========
API_TITLE=Smartphone Comparison API
API_DESCRIPTION=AI-powered smartphone comparison and recommendation service
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ========== CORS SETTINGS ==========
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]
ALLOW_CREDENTIALS=true

# ========== LLM SETTINGS ==========
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.0
GEMINI_MAX_TOKENS=
GEMINI_TIMEOUT=
GEMINI_MAX_RETRIES=2

# ========== SEARCH SETTINGS ==========
TAVILY_MAX_RESULTS=5
TAVILY_SEARCH_DEPTH=advanced
YOUTUBE_MAX_RESULTS=1
YOUTUBE_SEARCH_TYPE=video

# ========== PROCESSING SETTINGS ==========
MAX_RETRY_ATTEMPTS=2
RETRY_WAIT_TIME=20
MAX_CONTENT_LENGTH=50000
REQUEST_TIMEOUT=300

# ========== RATE LIMITING ==========
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ========== LOGGING SETTINGS ==========
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# ========== SECURITY SETTINGS ==========
SECRET_KEY=your-secret-key-change-in-production-with-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========== CACHE SETTINGS ==========
ENABLE_CACHE=false
CACHE_TTL=3600
REDIS_URL=

# ========== ENVIRONMENT ==========
ENVIRONMENT=development

# ========== OPTIONAL SETTINGS ==========
DATABASE_URL=
ENABLE_METRICS=true
CONTENT_SAFETY_ENABLED=true
INCLUDE_RAW_DATA=false